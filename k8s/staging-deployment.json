{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "tgs-pollbot",
    "labels": {
      "app": "tgs-pollbot",
      "type": "bot",
      "version": "0.1.0"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "tgs-pollbot"
      }
    },
    "template": {
      "metadata": {
        "name": "tgs-pollbot",
        "labels": {
          "app": "tgs-pollbot",
          "type": "bot",
          "version": "0.1.0"
        }
      },
      "spec": {
        "containers": [{
          "name": "tgs-pollbot-container",
          "image": "docker.zam.com:443/tgs-pollbot:0.1.0",
          "ports": [],
          "env": [{
              "name": "DISCORD_ACTIVITY",
              "value": "gathering polls"
            },
            {
              "name": "DISCORD_PREFIX",
              "value": "!"
            },
            {
              "name": "DISCORD_STATE_FILE",
              "value": "state-test.json"
            },
            {
              "name": "DISCORD_RESULTS_CHANNEL",
              "value": "577966748813361174"
            },
            {
              "name": "DISCORD_OWNER",
              "value": "577600058955137054"
            }
          ],
          "resources": {
            "limits": {
              "cpu": "500m",
              "memory": "500Mi"
            },
            "requests": {
              "cpu": "100m",
              "memory": "200Mi"
            }
          }
        }]
      }
    }
  }
}
